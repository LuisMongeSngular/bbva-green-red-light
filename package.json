{
  "name": "green-red-light",
  "version": "0.0.1",
  "description": "A starter kit for building PWAs!",
  "main": "index.js",
  "scripts": {
    "dev-server": "vite --open",
    "dev": "npm run dev-server",
    "dev-task": "vite",
    "deploy": "npx @azure/static-web-apps-cli login --no-use-keychain && npx @azure/static-web-apps-cli deploy",
    "build": "tsc && vite build",
    "start": "npm run dev",
    "start-remote": "vite --host"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@shoelace-style/shoelace": "^2.15.0",
    "@thepassle/app-tools": "^0.9.12",
    "lit": "^3.1.2",
    "urlpattern-polyfill": "^10.0.0",
    "workbox-build": "^7.0.0",
    "workbox-core": "^7.0.0",
    "workbox-precaching": "^7.0.0",
    "@babel/preset-env": "^7.24.5",
    "@lit-labs/router": "^0.1.3",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "jest-css-modules-transform": "^4.4.2"
  },
  "devDependencies": {
    "typescript": "^5.4.4",
    "vite": "^5.2.8",
    "vite-plugin-pwa": "^0.19.8",
    "@babel/core": "^7.24.5",
    "@testing-library/dom": "^10.1.0",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-html": "^8.1.1",
    "husky": "^4.3.8",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-jsdom-global": "^4.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.4.1",
    "shadow-dom-testing-library": "^1.11.2"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc",
      "prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "customElements": "custom-elements.json"
}
